# EBNF Grammar for Query Language
Query   ::= Select WS Fields WS From WS Source (WS Where WS Pred)? ;
Select  ::= "select" | "SELECT" ;
From    ::= "from" | "FROM" ;
Fields  ::= "*" | Ident ("," WS* Ident)* ;
Where   ::= "where" | "WHERE" ;
Pred    ::= Ident WS Op WS Value ;
Op      ::= "=" | "!=" | ">" | "<" | ">=" | "<=" ;
WS      ::= " "+ ;
Source  ::= Ident ;
Ident   ::= [a-zA-Z_][a-zA-Z0-9_]* ;
Value   ::= "'" [^']* "'" | [0-9]+ | [0-9]* "." [0-9]+ ;
